{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2017", "dom"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma",
      "src/@types"
    ],
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "@types"]
}
